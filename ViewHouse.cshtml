@model IEnumerable<Assignment_3.Models.Houses>
@{
    ViewBag.Title = "ViewHouse";
}

<h2>View House</h2>


<table style="table-layout: auto; width: 100%; text-align:center" border="1">
    <tr>
        <th>Area</th>
        <th>Address</th>
        <th>Marlas</th>
        <th>Price</th>
        <th>Edit</th>
    </tr>

    @foreach (var s in Model)
    {
<tr>
    <td>@s.Area</td>
    <td>@s.Address</td>
    <td>@s.Marlas</td>
    <td>@s.Price</td>
    <td><a href="/Home/EditHouse/@s.Id">Edit</a></td>
</tr>
    }
</table>